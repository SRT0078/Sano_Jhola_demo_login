<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".SkillsFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E4E4E4"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:text="@string/soft_skill"                            android:textAlignment="center"
                    android:textSize="25sp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:layout_marginTop="5dp"
                        android:columnCount="6"
                        android:rowCount="1"
                        tools:ignore="UselessParent">

                        <LinearLayout
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="5dp"
                            android:background="@drawable/shape"
                            android:orientation="vertical"
                            tools:ignore="UseCompoundDrawables">

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="center"
                                android:background="@mipmap/img_communication"
                                android:contentDescription="@null"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/communication_skills"
                                android:textAlignment="center" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="5dp"
                            android:background="@drawable/shape"
                            android:orientation="vertical"
                            tools:ignore="UseCompoundDrawables">

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="center"
                                android:background="@mipmap/img_time_mgmt"
                                android:contentDescription="@null" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/time_management_skills"
                                android:textAlignment="center" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="5dp"
                            android:background="@drawable/shape"
                            android:orientation="vertical"
                            tools:ignore="UseCompoundDrawables">

                            <ImageView
                                android:layout_width="130dp"
                                android:layout_height="120dp"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="center"
                                android:background="@mipmap/img_leadership"
                                android:contentDescription="@null"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/leadership_skill"
                                android:textAlignment="center" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="5dp"
                            android:background="@drawable/shape"
                            android:orientation="vertical"
                            tools:ignore="UseCompoundDrawables">

                            <ImageView
                                android:layout_width="130dp"
                                android:layout_height="120dp"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="center"
                                android:background="@mipmap/img_problem_solve"
                                android:contentDescription="@null" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/problem_solving_skills"
                                android:textAlignment="center" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="5dp"
                            android:background="@drawable/shape"
                            android:orientation="vertical"
                            tools:ignore="UseCompoundDrawables">

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="center"
                                android:background="@mipmap/img_interpersonal"
                                android:contentDescription="@null" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/interpersonal_skills"
                                android:textAlignment="center" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="5dp"
                            android:background="@drawable/shape"
                            android:orientation="vertical"
                            tools:ignore="UseCompoundDrawables">

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="center"
                                android:background="@mipmap/img_marketing"
                                android:contentDescription="@null" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/marketing_skill"
                                android:textAlignment="center" />

                        </LinearLayout>
                    </GridLayout>
                </HorizontalScrollView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:justificationMode="inter_word"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:text="@string/the_workplace_soft_skills_are_considered_to_be_a_complement_to_hard_skills_which_refer_to_a_person_s_knowledge_and_occupational_skills"
                    android:textAlignment="center"
                    tools:ignore="TextContrastCheck"
                    tools:targetApi="o" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:text="@string/programming_skills"
                    android:textAlignment="center"
                    android:textSize="25sp" />

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:columnCount="6"
                        android:rowCount="1"
                        tools:ignore="UselessParent">

                        <LinearLayout
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="5dp"
                            android:background="@drawable/shape"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="130dp"
                                android:layout_height="120dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:src="@mipmap/img_html"
                                android:contentDescription="@null" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/html_css_javascript"
                                android:textAlignment="center"
                                android:textSize="15sp"
                                tools:ignore="RtlSymmetry" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="5dp"
                            android:background="@drawable/shape"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="130dp"
                                android:layout_height="120dp"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="center"
                                android:contentDescription="@null"
                                android:src="@mipmap/img_java"
                                tools:ignore="ImageContrastCheck" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/java_programming"
                                android:textAlignment="center"
                                android:textSize="15sp"
                                tools:ignore="RtlSymmetry" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="5dp"
                            android:background="@drawable/shape"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="130dp"
                                android:layout_height="120dp"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="center"
                                android:src="@mipmap/img_python"
                                android:contentDescription="@null" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/python_programming"
                                android:textAlignment="center"
                                android:textSize="15sp"
                                tools:ignore="RtlSymmetry" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="5dp"
                            android:background="@drawable/shape"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="130dp"
                                android:layout_height="130dp"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="center"
                                android:src="@mipmap/img_github"
                                android:contentDescription="@null" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/git_version_control_skills"
                                android:textAlignment="center"
                                android:textSize="15sp"
                                tools:ignore="RtlSymmetry" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="5dp"
                            android:background="@drawable/shape"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="130dp"
                                android:layout_height="120dp"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="center"
                                android:src="@mipmap/img_android"
                                android:contentDescription="@null"
                                tools:ignore="ImageContrastCheck" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/android_app_development_skills"
                                android:textAlignment="center"
                                android:textSize="15sp"
                                tools:ignore="HardcodedText,RtlSymmetry" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="5dp"
                            android:background="@drawable/shape"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="130dp"
                                android:layout_height="120dp"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="center"
                                android:src="@mipmap/img_databases"
                                android:contentDescription="@null" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/database_and_sql"
                                android:textAlignment="center"
                                android:textSize="15sp"
                                tools:ignore="RtlSymmetry" />

                        </LinearLayout>
                    </GridLayout>
                </HorizontalScrollView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:justificationMode="inter_word"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:layout_marginBottom="35dp"
                    android:text="@string/programming_is_a_set_of_procedures_and_sets_of_instructions_that_lead_computers_to_perform_specific_tasks_programming_comprises_features_called_programming_framework_variables_data_types_keywords_loops_and_much_more"
                    android:textAlignment="center"
                    android:textColor="#616161"
                    tools:targetApi="o" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>


